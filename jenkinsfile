node{
    stage('code checkout'){
        git ' https://github.com/prasanth-pujari/insurance-project.git'
    }
    stage('code build'){
        sh 'mvn clean package'
    }
    stage('containerise'){
        sh 'docker build -t pujariprasanth/insurance:1.0 .'
    }
    stage('push to docker hub'){
        withCredentials([string(credentialsId: 'pujariprasanth', variable: 'docker')]) {
        sh "docker login -u pujariprasanth -p ${docker}"
        sh 'docker push pujariprasanth/insurance:1.0'
    }
    }
    stage ('deploy'){
        ansiblePlaybook become: true, credentialsId: 'ansible_ssh_private_key_file', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'playbook.yml', vaultTmpPath: ''
    }
}